package javabook.ch3;

public class test2 {
  public static void main(String[] args) {

    for (int i = 0; i <= 30; i++)
    	if(factorial(i) > 0) {
    		System.out.format("%d! = %d%n", i, factorial(i));
    	}
    	else {
    		System.out.println("overflow!");
    		break;
    	}
      
  }

  public static int factorial(int n) {
	int fac = 1;

    for (int i = 1; i <= n; i++)
      fac *= i;
    
    if(fac > __max_int) {
    	return -1;
    }

    return fac;
  }


}