package javabook.ch3;

class Fruit {
	private String pnum;
	private String name;
	private int price;
}
public class test {
	public static void main(String[] args) {
		Fruit[] a = new Fruit[3];
		
		a[0] = Fruit("00001", "りんご", 100);
		
		a[1].pnum = "00010";
		a[1].name = "メロン";
		a[1].price = 1000;
		
		a[2].pnum = "00100";
		a[2].name = "なし";
		a[2].price = 500;
		
		for(int i = 0; i < a.length; i++) {
			System.out.println("-------");
			System.out.println(a[i]);
		}
	}
}
