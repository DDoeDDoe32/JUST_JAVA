package javabook.ch3;

import java.util.Arrays;

class Fruit {
	String pnum;
	String name;
	int price;
	
	public Fruit () {
		
	}
}
public class test {
	public static void main(String[] args) {
		Fruit[] a = new Fruit[3];
		
		a[0] = new Fruit();
		
		a[0].pnum = "00001";
		a[0].name = "りんご";
		a[0].price = 100;
		
		a[1] = new Fruit();
		
		a[1].pnum = "00010";
		a[1].name = "メロン";
		a[1].price = 1000;
		
		a[2] = new Fruit();
		
		a[2].pnum = "00100";
		a[2].name = "なし";
		a[2].price = 500;
		
		for(Fruit s : a) {
			System.out.print(s.pnum + ", ");
			System.out.print(s.name + ", ");
			System.out.println(s.price);
		}
		
		System.out.println("----------");
		
		Arrays.sort(a);
		
		for(Fruit s : a) {
			System.out.print(s.pnum + ", ");
			System.out.print(s.name + ", ");
			System.out.println(s.price);
		}
	}
}
