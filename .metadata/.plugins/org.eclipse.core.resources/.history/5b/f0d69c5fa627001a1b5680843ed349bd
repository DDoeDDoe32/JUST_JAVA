package javabook.ch3;

class Fruits {
	public static int length;
	String pnum;
	String name;
	int price;
}
public class test {
	public static void main(String[] args) {
		Fruits[] a = new Fruits[3];
		
		a[0].pnum = "00001";
		a[0].name = "りんご";
		a[0].price = 100;
		
		a[1].pnum = "00010";
		a[1].name = "メロン";
		a[1].price = 1000;
		
		a[2].pnum = "00100";
		a[2].name = "なし";
		a[2].price = 500;
	}

	for(int i = 0; i < a.length; i++) {
		System.out.println("-------");
		a[i].show();
	}
}
