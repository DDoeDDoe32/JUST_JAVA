package javabook.ch3;

import java.math.BigInteger;

public class test2 {
  public static void main(String[] args) {

    for (int i = 0; i <= 30; i++)
      System.out.format("%d! = %d%n", i, factorial(i));
  }

  public static int factorial(int n) {
	int fac = 1;

    for (int i = 1; i <= n; i++)
      fac *= i;
    
    if(fac < 0) {
    	System.out.println("overflow!");
    	return;
    }

    return fac;
  }


}